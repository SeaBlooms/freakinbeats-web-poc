# Discogs API Configuration
# Get your token from: https://www.discogs.com/settings/developers
DISCOGS_TOKEN=your_discogs_api_token_here
DISCOGS_SELLER_USERNAME=freakin_beats

# Google Gemini API Configuration
# Get your API key from: https://ai.google.dev/
# Used to generate AI-powered label overviews
GEMINI_API_KEY=your_gemini_api_key_here
ENABLE_AI_OVERVIEWS=true

# Database Configuration (optional)
# Default: sqlite:///freakinbeats.db
DATABASE_URL=sqlite:///freakinbeats.db

# Sync Configuration
ENABLE_AUTO_SYNC=true
SYNC_INTERVAL_HOURS=1

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true

# Testing Configuration (optional)
# Enable tests that validate against real Discogs API responses
# Set to 'true' to run real data validation tests
ENABLE_REAL_DATA_TESTS=false

